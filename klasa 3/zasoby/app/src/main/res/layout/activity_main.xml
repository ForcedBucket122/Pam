<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rybka"
        android:textSize="@dimen/moja_czcionka"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/karp"
        android:contentDescription="@string/opis"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis"
        android:textSize="@dimen/moja_czcionka"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wow"
        android:textSize="@dimen/moja_czcionka"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rekord"
        android:contentDescription="@string/opis_rekord"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis_rekord"
        android:textSize="@dimen/moja_czcionka"
        android:textAlignment="center"
        />

</LinearLayout>